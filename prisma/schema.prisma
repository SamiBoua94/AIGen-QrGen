// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Photo {
  id           String   @id @default(uuid())
  filename     String   // nom unique du fichier
  originalName String   // nom original
  title        String?
  description  String?
  date         DateTime
  createdAt    DateTime @default(now())
  qrCodeData   String?  // données encodées du QR
}

model User {
  id               String   @id @default("current-user") // Single user for local app
  firstName        String?
  lastName         String?
  birthDate        String?
  email            String?
  phone            String?
  profession       String?
  zipCode          String?
  city             String?
  country          String?
  cryptoSignature  String?
  updatedAt        DateTime @updatedAt
}


